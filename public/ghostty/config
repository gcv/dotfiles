# Alt on Macs should be used to insert special characters.
macos-option-as-alt = false

font-family = Hack Nerd Font
font-size = 14

theme = iTerm2 Dark Background

cursor-style = block
cursor-style-blink = false
cursor-click-to-move = true


# Fix Apple Cmd key to be Meta / Alt. This requires a lot of remapping in Ghostty (for now):
# TODO: Is there a more global mapping that relies on "super" keys that'll work cross-platform?
# Keys: https://github.com/ghostty-org/ghostty/blob/d6e76858164d52cff460fedc61ddf2e560912d71/src/input/key.zig

# TODO: Maybe add another binding here to reload Ghostty configuration?
keybind = cmd+shift+comma=unbind

# Set up Cmd-Shift versions of common Mac shortcuts:
# - T new tab
# - N new window
# - C copy
# - V paste
keybind = ctrl+shift+t=new_tab
keybind = cmd+shift+t=new_tab
keybind = cmd+t=unbind
keybind = ctrl+shift+n=new_window
keybind = cmd+shift+n=new_window
keybind = cmd+n=unbind
keybind = ctrl+shift+c=copy_to_clipboard
keybind = cmd+shift+c=copy_to_clipboard
keybind = cmd+c=unbind
keybind = ctrl+shift+v=paste_from_clipboard
keybind = cmd+shift+v=paste_from_clipboard
keybind = cmd+v=unbind

# temporary? until https://github.com/ghostty-org/ghostty/discussions/3493 is fully resolved as a Ghostty setting
keybind = cmd+backspace=text:\x1B\x7F
